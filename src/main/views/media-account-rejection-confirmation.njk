{% from "macros/common-components.njk" import goBack, submitButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% extends "template.njk" %}

{% block pageTitle %}
 Media Account Rejection
{% endblock %}

{% block beforeContent %}
  {{ super() }}
{% endblock %}

{% block content %}
  {{ govukPanel({
    titleText: panelHeading
  }) }}

  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        {{ tableHeaders[0] }}
      </dt>
      <dd class="govuk-summary-list__value">
        {{ applicantData.fullName }}
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        {{ tableHeaders[1] }}
      </dt>
      <dd class="govuk-summary-list__value">
        <a href=mailto:{{ applicantData.email }}?subject={{ emailSubjectLine }}>{{ applicantData.email }}</a>
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        {{ tableHeaders[2] }}
      </dt>
      <dd class="govuk-summary-list__value">
        {{ applicantData.employer }}
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        {{ tableHeaders[3] }}
      </dt>
      <dd class="govuk-summary-list__value">
        {{ applicantData.requestDate }}
      </dd>
    </div>
      <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
              {{ tableHeaders[5] }}
          </dt>
          <dd class="govuk-summary-list__value">
              {{ reasons | mediaRejectionClean(true) }}
          </dd>
      </div>
  </dl>

  <h1 class="govuk-heading-m">{{ whatHappensNextHeader }}</h1>
  <p class="govuk-body">{{ whatHappensNext1 }} <a href=mailto:{{ applicantData.email }}?subject={{ emailSubjectLine }}>{{ applicantData.email }}</a> {{ whatHappensNext2 }}</p>

  <h1 class = "govuk-heading-m">{{ emailTemplateHeader }}</h1>

{% endblock %}
