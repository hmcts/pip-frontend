{% from "macros/common-components.njk" import goBack, submitButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
  {% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% extends "template.njk" %}
{% block pageTitle %}
 Media Account Rejection
{% endblock %}
{% block beforeContent %}
  {{ super() }}
{% endblock %}
{% block content %}

  {{ govukPanel({
    titleText: panelHeading
  }) }}

    {{ govukTable({
      caption: tableCaption,
      captionClasses: "govuk-table__caption--m",
      firstCellIsHeader: true,
      rows: [
        [
          {
            text: tableHeaders[0],
            classes: 'govuk-!-width-one-third'
          },
          {
            text: applicantData.fullName
          },
          {
            attributes: {
            'aria-hidden': 'true'
          }
          }
        ],
        [
          {
            text: tableHeaders[1],
            classes: 'govuk-!-width-one-third'
          },
          {
            text: applicantData.email
          },
          {
            attributes: {
          'aria-hidden': 'true'
          }
          }
        ],
        [
          {
            text: tableHeaders[2],
            classes: 'govuk-!-width-one-third'
          },
          {
            text: applicantData.employer
          },
          {
            attributes: {
          'aria-hidden': 'true'
          }
          }
        ],
        [
          {
            text: tableHeaders[3],
            classes: 'govuk-!-width-one-third'
          },
          {
            text: applicantData.requestDate
          },
          {
            attributes: {
          'aria-hidden': 'true'
          }
          }
        ],
        [
          {
            text: tableHeaders[4],
            classes: 'govuk-!-width-one-third'
          },
          {
            text: applicantData.imageName + " (" + opensInWindowText + ")"
          },
          {
            html: "<a href=\"/media-account-review/image?imageId=" +  applicantData.image + "&applicantId=" + applicantData.id + "\" target=\"_blank\">" + viewText + "</a>",
            classes: "right-align-text"
          }
        ]
      ]
    }) }}


  {{ govukTable({
    caption: tableCaption,
    captionClasses: "govuk-table__caption--m",
    firstCellIsHeader: true,
    rows: tableRows
  }) }}

  <h1 class="govuk-heading-m">{{ whatHappensNextHeader }}</h1>
  <p class="govuk-body">{{ whatHappensNext1 }} <a href=mailto:{{ applicantData.email }}&subject={{ emailSubjectLine }}>{{ applicantData.email }}</a> {{ whatHappensNext2 }}</p>

  <h1 class = "govuk-heading-m">{{ emailTemplateHeader }}</h1>

  {{ govukInsetText ({
    html: emailTemplateContent
  }) }}





{% endblock %}
