{% extends "govuk/template.njk" %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "moj/components/sub-navigation/macro.njk" import mojSubNavigation %}
{% from "./macros/common-components.njk" import backToTopButton %}
{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{% block head %}
  <!-- Google Tag Manager -->
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-N5R698M');</script>
  <!-- End Google Tag Manager -->
    <meta name="robots" content="noindex">
    {% include "webpack/css.njk" %}
{% endblock %}

{% block header %}
    {{ govukHeader({
        homepageUrl: "https://www.gov.uk/",
        serviceName: serviceNameText,
        serviceUrl: "/"
    }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "beta"
    },
    html: betaHeading
  }) }}
  <script>
    var link = document.getElementById("betalink")
    link.href= link.href + window.location.pathname.substring(1)
  </script>
  {% if user.role == 'SYSTEM_ADMIN' or user.role == 'INTERNAL_SUPER_ADMIN_LOCAL' %}
    {% set listItems = [
      {
        text: navLinks.link1,
        href: '/admin-dashboard'
      },
      {
        text: navLinks.link7,
        href: '/manual-upload'
      },
      {
        text: navLinks.link9,
        href: '/remove-list-search'
      },
      {
        text: navLinks.link3,
        href: '/logout'
      }
    ]%}
  {% elif user.role == 'INTERNAL_SUPER_ADMIN_CTSC' or user.role == 'INTERNAL_ADMIN_CTSC' %}
    {% set listItems = [
      {
        text: navLinks.link1,
        href: '/admin-dashboard'
      },
      {
        text: navLinks.link7,
        href: '/manual-upload'
      },
      {
        text: navLinks.link8,
        href: '/media-applications'
      },
      {
        text: navLinks.link9,
        href: '/remove-list-search'
      },
      {
        text: navLinks.link3,
        href: '/logout'
      }
    ]%}
  {% elif user.role == 'INTERNAL_ADMIN_LOCAL' %}
    {% set listItems = [
      {
        text: navLinks.link1,
        href: '/admin-dashboard'
      },
      {
        text: navLinks.link7,
        href: '/manual-upload'
      },
      {
        text: navLinks.link3,
        href: '/logout'
      }
    ]%}
  {% elif isAuthenticated %}
    {% set listItems = [
      {
        text: navLinks.link1,
        href: '/account-home'
      },
      {
        text: navLinks.link5,
        href: '/search'
      },
      {
        text: navLinks.link6,
        href: '/summary-of-publications?locationId=9'
      },
      {
        text: navLinks.link4,
        href: '/subscription-management'
      },
      {
        text: navLinks.link3,
        href: '/logout'
      }
    ]%}
  {% else %}
  {% set listItems =
    [
      {
        text: navLinks.link1,
        href: '/'
      },
      {
        text: navLinks.link5,
        href: '/search'
      },
      {
        text: navLinks.link6,
        href: '/summary-of-publications?locationId=9'
      },
      {
        text: navLinks.link2,
        href: '/sign-in'
      }
    ]%}
  {% endif %}
  {{ mojSubNavigation({
      label: 'Primary navigation',
      classes: 'pub-navigation govuk-!-margin-bottom-0',
      items: listItems
  }) }}
{% endblock %}

{% block bodyStart %}
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N5R698M"
                    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  {% set html %}
    <p class="govuk-body">We use some essential cookies to make this service work.</p>
    <p class="govuk-body">We’d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
  {% endset %}

  {% set acceptHtml %}
    <p class="govuk-body">You’ve accepted analytics cookies. You can <a class="govuk-link" href="/cookie-policy">change your cookie settings</a> at any time.</p>
  {% endset %}

  {% set rejectHtml %}
    <p class="govuk-body">You’ve rejected analytics cookies. You can <a class="govuk-link" href="/cookie-policy">change your cookie settings</a> at any time.</p>
  {% endset %}

  {{ govukCookieBanner({
    classes: 'cookie-banner',
    ariaLabel: "Cookies on " + serviceNameText,
    hidden: true,
    messages: [
      {
        classes: 'cookie-banner-message',
        headingText: "Cookies on " + serviceNameText,
        html: html,
        actions: [
        {
          classes: 'cookie-banner-accept-button',
          text: "Accept analytics cookies",
          type: "button",
          attributes: {
            id: 'cookie-banner-accept-button'
          }
        },
        {
          classes: 'cookie-banner-reject-button',
          text: "Reject analytics cookies",
          type: "button"
        },
        {
          text: "View cookies",
          href: "/cookie-policy"
        }
      ]
      },
      {
        classes: 'cookie-banner-accept-message',
        html: acceptHtml,
        role: 'alert',
        hidden: true,
        actions: [
        {
          classes: 'cookie-banner-hide-button',
          text: 'Hide this message',
          attributes: {
            id: 'cookie-banner-hide-button'
          }
        }
      ]
      },
      {
        classes: 'cookie-banner-reject-message',
        html: rejectHtml,
        role: 'alert',
        hidden: true,
        actions: [
        {
          classes: 'cookie-banner-hide-button',
          text: 'Hide this message'
        }
      ]
      }
    ]
  }) }}

{% endblock %}

{%  block content %}
  {{ backToTopButton(backToTop) }}
{% endblock %}

{% block bodyEnd %}
  <script src="alphabetical-dev.js"></script>
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "webpack/js.njk" %}
{% endblock %}

