{% extends "govuk/template.njk" %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "moj/components/sub-navigation/macro.njk" import mojSubNavigation %}

{% block head %}
    <meta name="robots" content="noindex">
    {% include "webpack/css.njk" %}
{% endblock %}

{% block header %}
    {{ govukHeader({
        homepageUrl: "https://www.gov.uk/",
        serviceName: serviceNameText,
        serviceUrl: "/"
    }) }}
{% endblock %}

{% block beforeContent %}
    {% set listItems = [
        {
            text: navLinks.link1,
            href: '/account-home'
        },
        {
            text: navLinks.link4,
            href: '/subscription-management'
        },
        {
            text: navLinks.link5,
            href: '/search'
        },
        {
            text: navLinks.link6,
            href: '/summary-of-publications?courtId=0'
        },
        {
            text: navLinks.link3,
            href: '/logout'
        }
    ] if isAuthenticated else [
        {
            text: navLinks.link1,
            href: '/view-option'
        },
        {
            text: navLinks.link5,
            href: '/search'
        },
        {
            text: navLinks.link6,
            href: '/summary-of-publications?courtId=0'
        },
        {
            text: navLinks.link2,
            href: '/sign-in'
        }
        ] %}
    {{ mojSubNavigation({
        label: 'Primary navigation',
        classes: 'pub-navigation govuk-!-margin-bottom-0',
        items: listItems
    }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "webpack/js.njk" %}
{% endblock %}

{% block footer %}
{{ govukFooter({
  meta: {
    items: [
      {
          href: "/help",
          text: help
      },
      {
          href: "/privacy-policy",
          text: privacyPolicy
      },
      {
          href: "/Cymraeg",
          text: language
      },
      {
          href: "/Cookie-policy",
          text: cookiePolicy
      },
      {
          href: "/accessibility-statement",
          text: accessibilityStatement
      },
      {
          href: "/Contact",
          text: contact
      },
      {
          href: "/terms-and-conditions",
          text: tc
      }
    ]
  }
}) }}
{% endblock %}
