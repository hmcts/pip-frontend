{% extends "template.njk" %}
{% block pageTitle %}
    {{ "Hearings List" | safe }}
{% endblock %}

{% block beforeContent %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
  {{ govukBackLink({
    text: "Back",
    href: "/"
  }) }}
{% endblock %}

{% block content %}
<h2 class="govuk-heading-l govuk-!-margin-bottom-8">Aylesbury Crown Court hearing list {{ hearings[1].name }}</h2>
{% from "govuk/components/table/macro.njk" import govukTable %}

  {% set hearing = [] %}

  {% for item in hearings %}
    {% set hearing = hearing + [
      {
        text: "abcd"
      },
      {
        text: "Test vs Test2"
      },
      {
        text: "1234"
      },
      {
        text: "Justice A B"
      },
      {
        text: "1pm",
        classes: "centre-align-text"
      },
      {
        text: "A",
        classes: "right-align-text"
      }
    ] %}
  {% endfor %}

  <h2>{{hearing | string}}</h2>
  {{ govukTable({
    caption: "List for June 9 2021" + courtList[1],
    captionClasses: "govuk-table__caption--m",
    firstCellIsHeader: false,
    head: [
      {
        text: "{{ pagename }}"
      },
      {
        text: "Case name"
      },
      {
        text: "Case number"
      },
      {
        text: "Judges"
      },
      {
        text: "Time",
        classes: "centre-align-text"
      },
      {
        text: "Hearing platform",
        classes: "right-align-text"
      }
    ],
    rows: [
    ]
  }) }}
  <hr class="line-bottom govuk-!-margin-top-9"></hr>
  <h4 class="govuk-heading-s govuk-!-margin-bottom-1">Related Content</h4>
  <a href="/search-option" class="govuk-link govuk-!-font-weight-bold">Find a court or tribunal list</a>

{% endblock %}

