{% from "macros/common-components.njk" import goBack, submitButton %}
{% extends "template.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {{ goBack() }}
{% endblock %}
{% block content %}
  <div class="parent-box">
    <h1 class="govuk-heading-l">{{ header }}</h1>
    <p class="govuk-body">{{ resultsMessage | replace("RESULTS_COUNT", courtList | length ) }}</p>
    {% if courtList | length > 0 %}
      <table class="govuk-table" data-module="moj-sortable-table">
        <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header" aria-sort="none">{{ tableHeaders[0] }}</th>
          <th scope="col" class="govuk-table__header" aria-sort="none">{{ tableHeaders[1] }}</th>
          <th scope="col" class="govuk-table__header" aria-sort="descending">{{ tableHeaders[2] }}</th>
          <th scope="col" class="govuk-table__header" aria-sort="descending">{{ tableHeaders[3] }}</th>
          <th scope="col" class="govuk-table__header govuk-table__header--numeric">{{ tableHeaders[4] }}</th>
        </tr>
        </thead>
        <tbody class="govuk-table__body">
        {% for item in courtList %}
          <tr class="govuk-table__row">
            <td class="govuk-table__cell">{{ item.name }}</td>
            <td class="govuk-table__cell">{{ item.locationType }}</td>
            <td class="govuk-table__cell">{{ item.jurisdiction }}</td>
            <td class="govuk-table__cell">{{ item.region }}</td>
            <td class="govuk-table__cell govuk-table__cell--numeric">
              <a class='unsubscribe-action' href='delete-court-reference-data-confirmation?locationId={{ item.locationId }}'>{{ rowAction }}</a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% endif %}
    {{ super() }}
  </div>
{% endblock %}
{% block bodyEnd %}
  {{ super() }}
  <script>
    if (window.history.replaceState) {
      window.history.replaceState(null, null, window.location.href);
    }
  </script>
{% endblock %}
