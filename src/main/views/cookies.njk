{% extends "template.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block beforeContent %}
    {{ super() }}
{% endblock %}

{% block content %}
<h1 class="govuk-heading-l">{{ title }}</h1>
<p class="govuk-body">{{ cookiesExplanation1 }}</p>
<p class="govuk-body">{{ cookiesExplanation2 }}</p>
<p class="govuk-body">{{ cookiesExplanation3 }}</p>

  {% set tableRows = [] %}
{% for row in cookieTableData %}
      {% set _ = tableRows.push([
      {
        text: row[0]
      },
      {
        text: row[1]
      },
      {
        text: row[2]
      }
      ]) %}
  {% endfor %}

{{ govukTable({
  caption: tableCaption,
  captionClasses: "govuk-table__caption--m",
  head: [
    {
      text: tableHeaders[0]
    },
    {
      text: tableHeaders[1]
    },
    {
      text: tableHeaders[2]
    }
  ],
  rows: tableRows

}) }}

{% endblock %}
