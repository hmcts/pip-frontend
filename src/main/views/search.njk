{% extends "template.njk" %}
{% from "macros/common-components.njk" import goBack, submitButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}

{% block pageTitle %}
    {{ "Search" | safe }}
{% endblock %}

{% block beforeContent %}
    {{ goBack('/search-option') }}
{% endblock %}

{% block content %}
    {% if noResultsError %}
        {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
                {
                    text: "There is nothing matching your criteria",
                    href: "search-input-container"
                }
            ]
        }) }}

        <form action="search" method="post">
            <div class="govuk-form-group--error govuk-!-width-one-half">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--l" for="search-input">
                        What court or tribunal are you interested in?
                    </label>
                </h1>
                <div id="search-input-hint" class="govuk-hint">
                    For example Blackburn Family Court or Chester
                </div>
                <div class="govuk-!-width-two-thirds govuk-input--error" id="search-input-container"></div>
            </div>
            <br/>
            <br/>
            {{ submitButton() }}
        </form>
        <br/>
        <h2 class="govuk-heading-s">There are no matching results.</h2>
        <p class="govuk-body">You can improve your results by double checking your spelling.</p>
    {% elif invalidInputError %}
        {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
                {
                    text: "Search must be three characters or more",
                    href: "search-input-container"
                }
            ]
        }) }}

        <form action="search" method="post">
            <div class="govuk-form-group--error govuk-!-width-one-half">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--l" for="search-input">
                        What court or tribunal are you interested in?
                    </label>
                </h1>
                <div id="search-input-hint" class="govuk-hint">
                    For example Blackburn Family Court or Chester
                </div>
                <div class="govuk-!-width-two-thirds govuk-input--error" id="search-input-container"></div>
            </div>
            <br/>
            <br/>
            {{ submitButton() }}
        </form>
    {% else %}
        <form action="search" method="post">
            <div class="govuk-form-group govuk-!-width-one-half">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--l" for="search-input">
                        What court or tribunal are you interested in?
                    </label>
                </h1>
                <div id="search-input-hint" class="govuk-hint">
                    For example Blackburn Family Court or Chester
                </div>
                <div class="govuk-!-width-two-thirds" id="search-input-container"></div>
            </div>
            {{ submitButton() }}
        </form>
    {% endif %}
{% endblock %}

{% block bodyEnd %}
    {% set optionList = [] %}
    {% for item in autocompleteList %}
        {% set _ = optionList.push(
            item.name
        ) %}
    {% endfor %}

    <script src="/assets/js/accessible-autocomplete.min.js"></script>
    <script>
      const element = document.querySelector('#search-input-container')
      const source = {{ optionList | dump |safe }}
        accessibleAutocomplete({
          element: element,
          id: 'search-input',
          source: source,
          required: true,
          autoselect: true
        })
    </script>
{% endblock %}
