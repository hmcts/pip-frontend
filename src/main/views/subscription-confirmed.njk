{% extends "template.njk" %}
{% from "./macros/common-components.njk" import successPanel %}

{% block pageTitle %}
  {{ title }}
{% endblock %}
{% block beforeContent %}
  {{ super() }}
{% endblock %}

{% block content %}
  {{ successPanel(header, subheader) }}
  <div class="parent-box">
  <p class="govuk-body">{{ p1 }}<a href="/account-home">{{ link_text }}</a>{{ p2 }}</p>
  <ul class="govuk-list govuk-list--bullet">
    {% for item in list %}
      <li>{{ item }}</li>
    {% endfor %}
  </ul>
  {{ super() }}
  </div>
{% endblock %}
{% block bodyEnd %}
  <script>
    if ( window.history.replaceState ) {
      window.history.replaceState( null, null, window.location.href );
    }
  </script>
  {{ super() }}
{% endblock %}
