{% from "govuk/components/table/macro.njk" import govukTable as 'govukTable' %}
{% from "./macros/common-components.njk" import goBack %}
{{ displayGlossaryAlphabet }}
{% extends "template.njk" %}
{% block pageTitle %}
  {{ "Event Glossary" | safe }}
{% endblock %}
{% block beforeContent %}
  {{ goBack('/') }}
{% endblock %}
{% block content %}
  <div id="grid-row" class="govuk-grid-row">
    <div class="layout-width-four-fifths">
      <h2 id='page-heading' class="govuk-heading-l">Live hearing updates - glossary of terms</h2>
      <p class="govuk-body">A list of descriptions for each hearing status that reflects in-court events</p>
      <div class="govuk-grid-row govuk-!-margin-bottom-8">
        {% for key, value in statusList %}
          {% if value| length != 0 %}
            <div class="govuk-grid-column width-column left-align-text govuk-!-font-size-19">
              <a id='{{ key }}-selector' href='#{{ key }}' class="govuk-link govuk-link--no-visited-state">{{ key }}</a>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <table class="govuk-table">
        <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header app-custom-class"></th>
          <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Hearing status</th>
          <th scope="col" class="govuk-table__header govuk-!-width-three-quarters">Description</th>
        </tr>
        </thead>
        <tbody class="govuk-table__body">
        {% for key, value in statusList %}
          {% for status, statusDetails in value %}
            <tr class="govuk-table__row">
              {% if value | length != 0 %}
                  <th scope="row" class="govuk-table__header">
                  {% if displayGlossaryAlphabet != "false" %}
                      <h2 id="{{ key }}" class="govuk-heading-l">{{key}}</h2>
                  {% endif %}
                  </th>
                <td class="govuk-table__cell">
                  <div id='{{ statusDetails.id }}' class="govuk-grid-column">
                    <a id='{{ statusDetails.id }}-selector' href='#{{ statusDetails.id }}' class="link-without-formatting">{{ status }}</a>
                  </div>
                </td>
                <td class="govuk-table__cell">
                  <div><p class="govuk-body">{{ statusDetails.description }}</p></div>
                </td>
              {% endif %}
            </tr>
            {% set displayGlossaryAlphabet = "false" %}
          {% endfor %}
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <hr class="govuk-section-break--visible govuk-!-margin-top-9"></hr>
  <a href="/" class="govuk-link govuk-!-font-weight-bold">Live hearing updates - select a court</a></br></br>
  <a href="/search-option" class="govuk-link govuk-!-font-weight-bold">Find a court or tribunal list</a>
{% endblock %}

