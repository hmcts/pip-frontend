{% from "./macros/common-components.njk" import goBack %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}
{% block pageTitle %}
  {{ title }}
{% endblock %}
{% block beforeContent %}
  {{ super() }}
  {{ goBack() }}
{% endblock %}
{% block content %}
  <h1 class="govuk-heading-l">{{ heading }}</h1>
  {% set channelWording = '' %}
  {% if subscriptionsChannel === '' %}
    {% set channelWording = noChannels %}
  {% else %}
    {% set channelWording = subscriptionsChannel %}
  {% endif %}
  {{ govukSummaryList({
    rows: [
      {
        key: {
          text: name
        },
        value: {
          text: userDetails.provenanceUserId
        }
      },
      {
        key: {
        text: role
      },
        value: {
        text: userDetails.roles
      }
      },
      {
        key: {
        text: createdDate
      },
        value: {
        text: userDetails.createdDate
      }
      },
      {
        key: {
        text: numberOfSubs
      },
        value: {
        text: numberOfSubscriptions
      }
      },
      {
        key: {
        text: subsChannel
      },
        value: {
        text: channelWording
      }
      }
    ]
  }) }}

  <div class="govuk-button-group">
    {{ govukButton({
      id: 'approve'
      text: manageSubscriptions,
      href: 'subscriptions?userId=' + userDetails.userId
    }) }}

    {{ govukButton({
      text: deleteUser,
      classes: "govuk-button--warning",
      href: '/delete-third-party-user-confirmation?userId=' + userDetails.userId
    }) }}
  </div>


{% endblock %}
{% block bodyEnd %}
  <script>
    if ( window.history.replaceState ) {
      window.history.replaceState(null, null, window.location.href);
    }
  </script>
  {{ super() }}
{% endblock %}
