{% from "govuk/components/table/macro.njk" import govukTable as 'govukTable' %}
{% from "./macros/common-components.njk" import goBack %}

{% extends "template.njk" %}
{% block pageTitle %}
  {{ title }}
{% endblock %}
{% block beforeContent %}
  {{ super() }}
  {{ goBack(text = backButton) }}
{% endblock %}
{% block content %}
  <div class="parent-box">
    <h2 id="page-heading" class="govuk-heading-l">
      {{ heading }}<br />{{ listData['venue']['venueName'] }} {{ dailyList }}
      {% if bill %}
        <br /><br />{{ headingWelsh }}<br />{{ listData['venue']['venueName'] }} {{ dailyListWelsh }}
      {% endif %}
    </h2>

    <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">{{ listDate }} {{ contentDate }}</p>
    <p class="govuk-body">{{ listUpdated | replace("DATE", publishedDate) }} {{ publishedTime }}</p>

    <details class="govuk-details" data-module="govuk-details" open>
      <summary class="govuk-details__summary"><span class="govuk-details__summary-text">{{ importantInformationHeading }}</span></summary>
      <div class="govuk-details__text">
        {% set courtHouseContact = listData['courtLists'][0]["courtHouse"]["courtHouseContact"] %}
        <p>{{ importantInformationP1 }}</p>
        <p>{{ importantInformationP2 }}</p>
        <p>{{ courtHouseContact["venueEmail"] }} {{ courtHouseContact["venueTelephone"] }}</p>
        <p>{{ importantInformationP3 }}</p>
        {% if bill %}
          <P>{{ importantInformationP4 }}</P>
          <P>{{ importantInformationP5 }}</P>
          <p>{{ courtHouseContact["venueEmail"] }} {{ courtHouseContact["venueTelephone"] }}</p>
          <P>{{ importantInformationP6 }}</P>
        {% endif %}
      </div>
    </details>

    {% for courtList in listData['courtLists'] %}
      {% set courtHouse = courtList['courtHouse'] %}
      <div class="site-header" tabindex="0" aria-label="Court Details">
        <h1 class="govuk-heading-l site-address" tabindex="0">{{ courtList['courtListName'] }}</h1>
      </div>

      <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-default">
        {% set courtRoomCount = 0 %}
        {% for courtRoom in courtHouse['courtRoom'] %}
          {% set caseCount = 1 %}
          {% set courtRoomCount = courtRoomCount + 1 %}
          <div class="govuk-accordion__section govuk-accordion__section--expanded">
            <div class="govuk-accordion__section-header">
              <h2 class="govuk-accordion__section-heading">
                <span class="govuk-accordion__section-button" id="accordion-default-heading-{{ courtRoomCount }}">
                  {% if "bail list" == courtList['courtListName'] | lower %}
                    {% if courtRoom['formattedJudiciary'] | length %}
                      {{ courtRoom['courtRoomName'] }}, {{ beforeJudge }} {{ courtRoom['formattedJudiciary'] }}
                    {% else %}
                      {{ courtRoom['courtRoomName'] }}
                    {% endif %}
                  {% else %}
                    {{ hearingRoom }}: {{ courtRoom['courtRoomName'] }}
                  {% endif %}
                </span>
              </h2>
            </div>

            <div id="accordion-default-content-{{ courtRoomCount }}" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-{{ courtRoomCount }}">
              <div class="parent-box overflow-table">
                <table class="govuk-table">
                  <thead class="govuk-table__head">
                  <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">{{ startTime }}</th>
                    <th scope="col" class="govuk-table__header">{{ caseRef }}</th>
                    <th scope="col" class="govuk-table__header">{{ appellant }}</th>
                    <th scope="col" class="govuk-table__header">{{ respondent }}</th>
                    <th scope="col" class="govuk-table__header">{{ interpreterLanguage }}</th>
                    <th scope="col" class="govuk-table__header">{{ hearingChannel }}</th>
                    <th scope="col" class="govuk-table__header">{{ linkCases }}</th>
                  </tr>
                  </thead>
                  <tbody class="govuk-table__body">
                  {% for session in courtRoom['session'] %}
                    {% for sitting in session['sittings'] %}
                      {% for hearing in sitting['hearing'] %}
                        {% for case in hearing['case'] %}
                          {% if courtRoom['totalCases'] === caseCount %}
                            {% set noBorder = 'no-border-bottom' %}
                          {% endif %}
                          <tr class="govuk-table__row">
                            <td class="govuk-table__cell {{ noBorder }}">{{ sitting['sittingStartFormatted'] }}</td>
                            {% if case['caseSequenceIndicator'] | length %}
                              <td class="govuk-table__cell {{ noBorder }}">{{ case['caseNumber'] }} [{{ case['caseSequenceIndicator'] }}]</td>
                            {% else %}
                              <td class="govuk-table__cell {{ noBorder }}">{{ case['caseNumber'] }}</td>
                            {% endif %}
                            {% if hearing['appellantRepresentative'] | length %}
                              <td class="govuk-table__cell {{ noBorder }}">{{ hearing['appellant'] }}<br />{{ rep }}: {{ hearing['appellantRepresentative'] }}</td>
                            {% else %}
                              <td class="govuk-table__cell {{ noBorder }}">{{ hearing['appellant'] }}<br />{{ rep }}: {{ noRep }}</td>
                            {% endif %}
                            <td class="govuk-table__cell {{ noBorder }}">{{ hearing['prosecutingAuthority'] }}</td>
                            <td class="govuk-table__cell {{ noBorder }}">{{ case['language'] }}</td>
                            <td class="govuk-table__cell {{ noBorder }}">{{ sitting['caseHearingChannel'] }}</td>
                            <td class="govuk-table__cell {{ noBorder }}">{{ case['formattedLinkedCases'] }}</td>
                          </tr>
                          {% set caseCount = caseCount + 1 %}
                        {% endfor %}
                      {% endfor %}
                    {% endfor %}
                  {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
    <p class="govuk-body govuk-!-font-size-14">{{ dataSource }}: {{ provenance }}</p>
    {{ super() }}
  </div>
{% endblock %}
{% block bodyEnd %}
  <script>
    if ( window.history.replaceState ) {
      window.history.replaceState( null, null, window.location.href );
    }
  </script>
  {{ super() }}
{% endblock %}
