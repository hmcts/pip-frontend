{% from "govuk/components/table/macro.njk" import govukTable as 'govukTable' %}
{% from "macros/common-components.njk" import goBack, submitButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}


{% extends "template.njk" %}
{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {{ goBack(text = backButton) }}
{% endblock %}

{% block content %}
  <div class="parent-box">
    <h1 class="govuk-heading-l">{{ header | replace("EMAIL", email ) }}</h1>
    {{ govukInsetText({
      text: subHeading | replace("ROLE", currentRole )
    }) }}
    <form action="update-user-confirmation" method="post">
      {{ govukInput({
        id: "userId",
        name: "userId",
        type: "hidden",
        value: userId
      }) }}
      {{ govukSelect({
        id: "updatedRole",
        name: "updatedRole",
        items: selectBoxData
      }) }}
      {{ submitButton(continueButton) }}
    </form>
    {{ super() }}
  </div>
{% endblock %}
{% block bodyEnd %}
  {{ super() }}
{% endblock %}
