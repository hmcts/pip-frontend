{% from "macros/common-components.njk" import goBack, successPanel %}

{% extends "template.njk" %}
{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {{ goBack(text = backButton) }}
{% endblock %}

{% block content %}
  {{ successPanel(title, message) }}
  <div class="parent-box">
    <p class="govuk-body">
      {{ pStart }}
      {% if isSystemAdmin %}
        <a class="govuk-link" href={{ systemAdminLink }}>{{ systemAdminText }}</a>
      {% else %}
        <a class="govuk-link" href={{ adminLink }}>{{ adminText }}</a>
      {% endif %}
      {{ pEnd }}
    </p>
    {% if isSystemAdmin %}
      <ul class="govuk-list govuk-list--bullet">
        {% for item in systemAdminListItems %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <ul class="govuk-list govuk-list--bullet">
        {% for item in adminListItems %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    {% endif %}
    {{ super() }}
  </div>
{% endblock %}
{% block bodyEnd %}
  {{ super() }}
  <script>
    if ( window.history.replaceState ) {
      window.history.replaceState( null, null, window.location.href );
    }
  </script>
{% endblock %}
