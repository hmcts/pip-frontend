{% extends "template.njk" %}
{% from "./macros/common-components.njk" import goBack %}

{% block pageTitle %}
    {{ title }}
{% endblock %}
{% block beforeContent %}
    {{ super() }}
    {{ goBack() }}
{% endblock %}
{% block content %}
    <div class="govuk-grid-row">
        <h1 class="govuk-heading-l">{{ heading }}</h1>
    </div>
    <div class="cards-wrapper">
        {% for card in cards %}
            <div class="govuk-!-margin-top-2 govuk-!-margin-bottom-2">
                <div class="account-card govuk-!-margin-left-2 govuk-!-margin-right-2">
                    <p>
                        <a href="{{ card.link }}"
                           class="govuk-link govuk-body govuk-!-font-weight-bold"
                           id="card-{{ card.link }}"
                        >{{ card.title }}</a>
                    </p>
                    {% if card.description %}
                        <p class="govuk-body">{{ card.description }}</p>
                    {% else %}
                        <ul class="govuk-list govuk-list--bullet">
                            {{ card.unorderedList }}
                            {% for item in card.listItems %}
                                <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
