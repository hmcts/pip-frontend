{% from "macros/common-components.njk" import goBack %}
{% extends "template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  <ul class="moj-sub-navigation__list">
    <li class="moj-sub-navigation__item">
      <a class="moj-sub-navigation__link govuk-!-font-size-16t" href="/">Home</a>
  </ul>
  {{ goBack() }}
{% endblock %}
{% block pageTitle %}
  {{ header }}
{% endblock %}
{% block content %}
  <h1 class="govuk-heading-l">{{ header }}</h1>
  <p class="govuk-body">{{ bodyText }}</p>
  {{ govukButton({
    id: 'buttonForSignIn',
    text: buttonText,
    href: '/login?p=B2C_1_SignInUserFlow'
  }) }}
{% endblock %}
