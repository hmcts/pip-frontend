{% from "govuk/components/table/macro.njk" import govukTable as 'govukTable' %}
{% from "macros/common-components.njk" import goBack, submitButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "template.njk" %}
{% block pageTitle %}
    {{ pageName }}
{% endblock %}

{% block beforeContent %}
    {{ super() }}
    {{ goBack() }}
{% endblock %}

{% block content %}
    <h2 class="govuk-heading-l">{{ title }}</h2>
    <form action="unsubscribe-confirmation" method="post">
        {{ govukInput({
            id: "subscription",
            name: "subscription",
            type: "hidden",
            value: subscription
        }) }}
        {{ govukRadios({
            idPrefix: "unsubscribe-confirm",
            name: "unsubscribe-confirm",
            items: [
                {
                    value: "yes",
                    text: radio1
                },
                {
                    value: "no",
                    text: radio2
                }
            ]
        }) }}
        {{ submitButton() }}
    </form>
{% endblock %}
{% block bodyEnd %}
    {{ super() }}
    <script>
      const button = document.getElementsByClassName('govuk-button')[0];
      button.addEventListener('click', (e) => {
        const checkedRadios = document.querySelectorAll('input[type="radio"]:checked');
        if (!checkedRadios.length) {
          e.preventDefault();
        }
      });
    </script>
{% endblock %}

