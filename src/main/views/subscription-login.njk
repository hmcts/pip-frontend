{% from "./macros/common-components.njk" import goBack %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}
{% block pageTitle %}
  {{ "Subscription Login" | safe }}
{% endblock %}
{% block content %}
  <form method="post" novalidate>
    <h1 class="govuk-heading-l govuk-!-margin-top-5">Enter your email address</h1>
    <div class="govuk-body">Your email address will be used for security reasons. When you click continue, we will send you an email with a one-time password (OTP) code.</div>
    <h3 class="govuk-heading-s" id="input-label">Enter your email address</h3>
    <input class="govuk-input
    govuk-input--width-10
    govuk-!-margin-right-2" id="email-address" name="email-address"
           aria-labelledby="input-label"
           autocomplete="off">
    </p>

    {{ govukButton({
      text: "Continue",
      classes: "govuk-!-margin-top-5 govuk-!-margin-bottom-8",
      href: 'otp-login'
    }) }}

  </form>
{% endblock %}
