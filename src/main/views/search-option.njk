{% extends "template.njk" %}
{% from "macros/form.njk" import submitButton %}
{% block pageTitle %}
    {{ "Search Option" | safe }}
{% endblock %}

{% block beforeContent %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
  {{ govukBackLink({
    text: "Back",
    href: "/"
  }) }}
{% endblock %}

{% block content %}
  {% from "govuk/components/radios/macro.njk" import govukRadios %}
  {{ govukRadios({
    idPrefix: "find-choice",
    name: "find-choice",
    fieldset: {
      legend: {
        text: 'Find a court or tribunal list',
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    items: [
              {
                value: "search",
                text: "Search for a court or tribunal"
              },
              {
                value: "find",
                text: "Find a court or tribunal alphabetically"
              }
           ]
    })
  }}

    {{ submitButton() }}
{% endblock %}
