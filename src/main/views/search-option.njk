{% extends "template.njk" %}
{% from "macros/common-components.njk" import goBack, submitButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block pageTitle %}
    {{ "Search Option" | safe }}
{% endblock %}

{% block beforeContent %}
    {{ goBack('/') }}
{% endblock %}

{% block content %}
    <form action="/search-option" method="post">
        {{ govukRadios({
            idPrefix: "find-choice",
            name: "find-choice",
            fieldset: {
                legend: {
                    text: 'Find a court or tribunal list',
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            items: [
                {
                    value: "search",
                    text: "Search for a court or tribunal"
                },
                {
                    value: "find",
                    text: "Find a court or tribunal alphabetically"
                }
            ]
        }) }}
        {{ submitButton() }}
    </form>
{% endblock %}
