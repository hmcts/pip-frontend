{
    "name": "publishing-information-project",
    "description": "Publication Information Project Frontend",
    "version": "0.0.1",
    "license": "MIT",
    "engines": {
        "node": ">=18.12.0"
    },
    "scripts": {
        "start": "USE_PROTOTYPE=true NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
        "start:dev": "REDIS_LOCAL=true SESSION_COOKIE_SAME_SITE= && nodemon --config nodemon.json",
        "lint": "stylelint **/*.scss && eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "prettier --write . && eslint --fix .",
        "build": "yarn webpack --config webpack.config.js",
        "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
        "test": "npx if-env CI=true && exit 0 || yarn test:unit --maxWorkers=50%",
        "test:unit": "jest",
        "test:failures": "jest -f",
        "test:controllers": "jest -- src/test/unit/controllers",
        "test:services": "jest -- src/test/unit/service",
        "test:requests": "jest -- src/test/unit/requests",
        "test:views": "jest -- src/test/unit/views",
        "test:coverage": "jest --coverage && jest -c jest.routes.config.js",
        "test:routes": "jest -c jest.routes.config.js --forceExit",
        "test:a11y": "jest -c jest.a11y.config.js --maxWorkers 2 --forceExit",
        "fortifyScan": "./src/test/fortify/gradlew -p src/test/fortify fortifyScan",
        "sonar-scan": "sonar-scanner",
        "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 && jest -c jest.smoke.config.js",
        "test:crossbrowser": "npm-run-all -scl test:crossbrowser:all test:crossbrowser:report",
        "test:crossbrowser:all": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run-multiple --all --grep @CrossBrowser --config ./src/test/end-to-end/crossbrowser.conf.js",
        "test:crossbrowser:report": "allure generate functional-output/cross-browser/reports/**/* -c -o functional-output/cross-browser/allure",
        "test:functional": "npm-run-all -scl test:functional:min test:functional:report",
        "test:fullfunctional": "npm-run-all -scl test:functional:all test:functional:report",
        "test:functional:all": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run-workers 8 parallel --config ./src/test/end-to-end/functional.conf.js",
        "test:functional:min": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run-workers 8 parallel  --grep \"(?=.*)^(?!.*@Nightly)\" --config ./src/test/end-to-end/functional.conf.js",
        "test:functional:report": "allure generate functional-output/functional/reports/ -c -o functional-output/functional/allure",
        "cichecks": "yarn && yarn build && yarn lint && yarn test && yarn test:routes &&  yarn test:a11y"
    },
